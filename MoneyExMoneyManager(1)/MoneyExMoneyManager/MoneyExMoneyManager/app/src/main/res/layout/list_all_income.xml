<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="#0FAE62">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_i"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Rant"
            android:textColor="@color/setwhite"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/category_i"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Rant &amp; Bill"
            android:textColor="@color/setwhite"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/price_i"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="10000"
            android:textColor="@color/setwhite"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/edit_item_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:src="@drawable/ic_edit_img" />

        <ImageView
            android:id="@+id/delet_item_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:src="@drawable/ic_delete" />

    </LinearLayout>

</RelativeLayout>